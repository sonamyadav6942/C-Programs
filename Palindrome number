// C++ Program to Check Palindrome Number or not

#include<iostream>
using namespace std;
int main()
{
	int num, rem, temp, rev = 0;
	
	cout << "Enter a number : ";
	cin >> num;
	
	temp = num;
	while (num != 0)
	{
		rem = num % 10;
		rev = rev * 10 + rem;
		num = num / 10;
	}
	
	if(temp == rev)
	
	{
		cout << temp << " is a palindrome number." << endl;
	}
	
	else
	
	{
		cout<< temp << " is not a palindrome number." << endl;
	}
	
	return 0;
}

