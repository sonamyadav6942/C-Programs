// C++ program to find Sum of Numbers in a Given Range

#include<iostream>
using namespace std;
int main()
{
	int num1;
	int num2;
	cout << "Enter first number : ";
	cin >> num1;
	cout << "Enter second number :";
	cin >> num2;
	int sum = 0;
	for(int i = num1; i <= num2; i++)
	{
	 sum = sum + i;
	}
	cout << "Total sum of first and second number is " << sum << endl;
	return 0;
}

