// C++ Program to Find the Sum of N Natural Numbers

// Using for loop

#include<iostream>
using namespace std;
int main()
{
	int num, i, sum = 0;
	cout << "Enter a postive number : ";
	cin >> num;
	for(i = 1; i <= num; i++)
	{
		sum = sum + i;
	}
	cout << "Sum of a number is " << sum << endl;
	return 0;
}

--------------------------------------------------------------------------------------------------------------------------------------------------------------------------

// Using while loop

#include<iostream>
using namespace std;
int main()
{
	int num, sum = 0;
	cout << "Enter a postive number : ";
	cin >> num;
	int i = 1;
	while(i <= num)
	{
		sum = sum + i;
		i++;
	}
	cout << "Sum of a number is " << sum << endl;
	return 0;
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------


// Formula to Find the Sum of N terms
Sum = ( Num * ( Num + 1 ) ) / 2

#include<iostream>
using namespace std;
int main()
{
	int n;
	cout << "Enter a number : ";
	cin >> n;
	cout << n * (n + 1)/2;
	return 0;
}

