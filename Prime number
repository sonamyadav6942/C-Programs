// Program to Check if a Number is Prime Number or not in C++

#include<iostream>
using namespace std;
int main()
{
	int num, i, count = 0;
cout << "Enter a number : ";
cin >> num;
for(i = 1; i <= num; i++)
{
	if(num % i == 0)
	{
		count ++;
	}
}
if(count == 2)
{
	cout << "Given number is prime.";
}
else
{
	cout << "Given number is not prime.";
}
return 0;
}

