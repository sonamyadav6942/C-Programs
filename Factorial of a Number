// Program to find Factorial of a number in C++ 

#include<iostream>
using namespace std;
int main()
{
	int num, i, fact = 1;
	cout << "Enter a positive number : ";
	cin >> num;
	for(i = num; i >= 1; i--)
	{
		fact = fact * i;
	}
	cout << "Factorial of a " << num << " is " << fact;
	return 0;
}

