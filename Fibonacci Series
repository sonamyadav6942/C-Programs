--------------------------------------------------------------------------------------------------------------------------------------------------------------------------

// C++ program to print Fibonacci Series

int main()
{
	int num;
	int firstTerm = 0, secondTerm = 1;
	int nextTerm;
	
	cout << "Enter the sequence of number : ";
	cin >> num;
	
	// Here we are printing first and second term 
	
	cout << firstTerm << " " << secondTerm << " ";
	
	// Now we are printing rest of the term
	
	for(int i = 2; i < num; i++)
	{
		nextTerm = firstTerm + secondTerm;
		firstTerm = secondTerm;
		secondTerm = nextTerm;
		
		cout << nextTerm << " " ;
	}
	
	return 0;
	
}

